@model pryecto.Models.Song

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <link rel="stylesheet" type="text/css" href="~/Resources/CSS/estilosDetalle.css"/>
</head>
<body>
    <div>
        <h4>@Html.DisplayFor(model => model.Name)</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Autor
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Author)
            </dd>

            <dt>
                Título
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Género
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Genre)
            </dd>

            <dt>
                Duracion
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Duration)
            </dd>


            <dt>
                Id del Publicante
            </dt>

            <dd>
                <!--Convertimos el id del publicante en un enlace-->
                @{
                    string usuario = Model.PublisherId.ToString();
                    int idUsuario = Model.PublisherId;
                }
                

                <a href="/Users/Details/@idUsuario">@usuario</a>
            </dd>

            <dt>
                Letra
            </dt>

            <dd id="letra">
                @Html.DisplayFor(model => model.Lyrics)
            </dd>


        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.idCancion }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
