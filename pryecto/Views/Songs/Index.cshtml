@model IEnumerable<pryecto.Models.Song>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Añadir Cancion", "Create")
    </p>
    <table class="table" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lyrics)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublisherId)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                <!--Ponemos disponible o No disponible según tenga letra o no-->
                @{
                    string letra = "";
                    if (item.Lyrics != null) {letra = "Disponible"; }
                    else { letra = "No disponible"; }
                }

                @letra
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublisherId)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.idCancion }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.idCancion }) |
                @Html.ActionLink("Eliminar", "Delete", new { id=item.idCancion })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
