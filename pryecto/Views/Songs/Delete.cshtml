@model pryecto.Models.Song

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Liebeslied</title>
    <link rel="stylesheet" type="text/css" href="~/Resources/CSS/estilosDetalle.css" />
    <link rel="icon" type="image/png" href="~/Resources/img/favicon.ico" />
</head>
<body>
    <h3>¿Quieres eliminar esta cancion?</h3>
    <div>
        <h4>Song</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Autor
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Author)
            </dd>

            <dt>
                Título
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Género
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Genre)
            </dd>

            <dt>
                Duración
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Duration)
            </dd>

            <dt>
                Id del Publicante
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PublisherId)
            </dd>

            <dt>
                Letra
            </dt>

            <dd id="letra">
                @Html.DisplayFor(model => model.Lyrics)
            </dd>

        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div class="form-actions no-color">
                <input type="submit" value="Eliminar" class="btn btn-default" /> |
                @Html.ActionLink("Volver", "Index")
            </div>
        }
    </div>
</body>
</html>
